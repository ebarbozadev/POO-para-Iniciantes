unit uteis;

interface

type
  TUteis = class
    private
    public
      function somar(valor1, valor2 : double) : double;
      function subtrair(valor1, valor2 : double) : double;
      function multiplicar(valor1, valor2 : double) : double;
      function dividir(valor1, valor2 : double) : double;
  end;

implementation

{ TUteis }

function TUteis.dividir(valor1, valor2: double): double;
begin
  Result:= valor1 / valor2;
end;

function TUteis.multiplicar(valor1, valor2: double): double;
begin
  Result:= valor1 * valor2;
end;

function TUteis.somar(valor1, valor2: double): double;
begin
  Result:= valor1 + valor2;
end;

function TUteis.subtrair(valor1, valor2: double): double;
begin
  Result:= valor1 - valor2;
end;

end.
